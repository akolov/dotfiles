#!/usr/bin/env ruby

%x( ln -s $HOME/.config/nvim $HOME/.vim )
%x( ln -s $HOME/.config/nvim/init.vim $HOME/.vimrc )

fish = %x( which fish )
if $?.exitstatus == 0
  %x( curl -L https://github.com/bpinto/oh-my-fish/raw/master/tools/install.fish | fish )
else
  puts "Fish is not installed"
end

%x(sudo pip install percol)

brew = %x( which brew )
if $?.exitstatus == 0
  %x(brew install autojump)
else 
  puts "Brew is not installed"
end
